{
  "manifest_version": 3,
  "name": "Backlog Quick Add",
  "version": "0.0.1",
  "description": "Selected text -> open Side Panel form",
  "permissions": ["contextMenus", "storage", "activeTab", "sidePanel", "alarms", "windows"],
  "host_permissions": ["https://itreatinc.backlog.com/*"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_title": "Backlog Quick Add",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": { "default_path": "sidepanel.html" }
}
